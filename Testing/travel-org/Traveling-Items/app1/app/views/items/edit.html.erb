<div id = "signup-edit">
		<h2><u>Edit your item here: </u></h2>

		<%=form_for @item, :url => items_path, :html => { :multipart => true } do |f| %>

		<%=f.label :name %>
		<%=f.text_field :name %>

		<%=f.label :details %>
		<%=f.text_field :details %>

		<%=f.label :price %>
		<%=f.text_field :price %>

		<%=f.label :category %>
		<%=f.text_field :category %>

		<%=f.label :url %>
		<%=f.text_field :url %>

		 <%= f.file_field :avatar %>

		<%=f.submit 'Submit' %>
		<%end%>