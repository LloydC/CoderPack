<h2><u>Edit your destination here: </u></h2>

		<%=form_for @destination, :url => destination_path, :html => { :multipart => true } do |f| %>

		<%=f.label :name %>
		<%=f.text_field :name %>
		<br>
		<%=f.label :country %>
		<%=f.text_field :country %>
		<br>
				<%=f.label :languages %>
		<%=f.text_field :languages %>
		<%=f.label :visas_info %>
		<%=f.text_field :visas_info %>
		<br>
		<%=f.label :health_info %>
		<%=f.text_field :health_info %>
		<br>
		<%=f.label :safety_info %>
		<%=f.text_field :safety_info %>
		<br>
		 <%= f.file_field :avatar %>
		<%=f.submit 'Submit' %>
		<%end%>
<br>
<%= link_to 'Return to the destination page', destinations_path %>