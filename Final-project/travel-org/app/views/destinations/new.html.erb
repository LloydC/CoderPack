<h3>Add a destination's details to the database:  </h3>

<%=form_for @destination, :url => destinations_new_path, :html => { :multipart => true } do |f| %>	
		
		<%=f.label :city %>
		<%=f.text_field :city %>

		<%=f.label :country %>
		<%=f.text_field :country %>

		<%=f.label :information %>
		<%=f.text_field :information %>

		<%=f.label :accomodation %>
		<%=f.text_field :accomodation %>

		 <%= f.file_field :avatar %>

		<%=f.submit %>
		<%end%>